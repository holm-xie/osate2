<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.osate.componentcounter.ui.countcomponents"
            name="Count Components">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.modelstats.ui.CountComponentsHandler"
            commandId="org.osate.componentcounter.ui.countcomponents">
            <enabledWhen>
             <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
			</reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.osate.ui.modelCleanupMenu?after=core">
         <command
               commandId="org.osate.componentcounter.ui.countcomponents"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
